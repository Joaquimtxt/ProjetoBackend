@model ProjetoBackend.Models.Cliente

@{
    ViewData["Title"] = "Editar";
}
<div class="container-fluid text-center my-4">
    <img class="img-fluid" src="~/img/jaketa-white.png" width="397" height="132" />
</div>

<div class="container">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row ms-3 me-3">
            <div class="col-12 col-md-6 mt-2">
                <input type="hidden" asp-for="ClienteId" />
                <div class="form-group text-light">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-md mt-2">
                <div class="form-group text-light">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row ms-3 me-3">
            <div class="col-12 col-md-5 mt-2">
                <div class="form-group text-light">
                    <label asp-for="Celular" class="control-label"></label>
                    <input asp-for="Celular" class="form-control" />
                    <span asp-validation-for="Celular" class="text-danger"></span>
                </div>
            </div>

            <div class="col-12 col-md mt-2">
                <div class="form-group text-light">
                    <label asp-for="CnpjCpf" class="control-label"></label>
                    <input asp-for="CnpjCpf" class="form-control" />
                    <span asp-validation-for="CnpjCpf" class="text-danger"></span>
                </div>
            </div>
        </div>


        <div class="row ms-3 me-3">
            <div class="col-12 col-md-4 mt-2">
                <div class="form-group text-light">
                    <label asp-for="DataNascimento" class="control-label"></label>
                    <input asp-for="DataNascimento" class="form-control" />
                    <span asp-validation-for="DataNascimento" class="text-danger"></span>
                </div>
            </div>

            <div class="col-12 col-md-4 mt-2">
                <div class="form-group text-light">
                    <label asp-for="DataCadastro" class="control-label"></label>
                    <input asp-for="DataCadastro" class="form-control" />
                    <span asp-validation-for="DataCadastro" class="text-danger"></span>
                </div>
            </div>

            <div class="col-12 col-md-4 mt-2">
                <div class="form-group text-light">
                    <label>CadastroAtivo</label>
                    <select class="form-select" id="CadastroAtivo" name="CadastroAtivo">
                        <option value="true">Sim</option>
                        <option value="false">Não</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row">

            <div class="justify-content-center align-items-center d-flex">

                <div class="col col-md-4 mt-4 ms-5 me-5">
                    <div class="form-group">
                        <input type="submit" value="Editar" class="btn btn-primary text-black w-100" />
                    </div>
                </div>
                <div class="col-2 col-md-4 mt-4 me-5">
                    <a class="btn btn-outline-secondary w-100" asp-action="Index">Cancelar</a>
                </div>
            </div>
        </div>

    </form>
</div>


