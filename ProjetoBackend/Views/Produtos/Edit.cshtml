@model ProjetoBackend.Models.Produto

@{
    ViewData["Title"] = "Editar";
}

<div class="container-fluid text-center my-4">
    <img class="img-fluid" src="~/img/jaketa-white.png" width="397" height="132" />
</div>

<div class="container">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row ms-3 me-3">
            <div class="col-12 col-md-6 mt-2">
                <input type="hidden" asp-for="ProdutoId" />
                <div class="form-group text-light">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-md mt-2">
                <div class="form-group text-light">
                    <label asp-for="CodigoProduto" class="control-label"></label>
                    <input asp-for="CodigoProduto" class="form-control" />
                    <span asp-validation-for="CodigoProduto" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row ms-3 me-3">
            <div class="col-12 col-md-6 mt-2">
                <div class="form-group text-light">
                    <label asp-for="Preco" class="control-label"></label>
                    <input type="number" step="0.01" asp-for="Preco" class="form-control" />
                    <span asp-validation-for="Preco" class="text-danger"></span>
                </div>
            </div>

            <div class="col-12 col-md mt-2">
                <div class="form-group text-light">
                    <label asp-for="Estoque" class="control-label"></label>
                    <input asp-for="Estoque" class="form-control" />
                    <span asp-validation-for="Estoque" class="text-danger"></span>
                </div>
            </div>
        </div>


        <div class="row ms-3 me-3">


            <div class="col-12 col-md-6 mt-2">
                <div class="form-group text-light">
                    <label asp-for="CaracteristicaId" class="control-label"></label>
                    <select asp-for="CaracteristicaId" class="form-control" asp-items="ViewBag.CaracteristicaId"></select>
                    <span asp-validation-for="CaracteristicaId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-md mt-2">
                <div class="form-group text-light">
                    <label asp-for="CategoriaId" class="control-label"></label>
                    <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
                    <span asp-validation-for="CategoriaId" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">

            <div class="justify-content-center align-items-center d-flex">

                <div class="col-4 mt-4 ms-sm-1 me-sm-1 ms-xl-5 me-xl-5">
                    <div class="form-group">
                        <input type="submit" value="Editar" class="btn btn-primary text-black w-100" />
                    </div>
                </div>
                <div class="col-4 mt-4 ms-sm-1 me-sm-1 ms-xl-5 me-xl-5">
                    <a class="btn btn-outline-secondary w-100" asp-action="Index">Cancelar</a>
                </div>
            </div>
        </div>

    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
