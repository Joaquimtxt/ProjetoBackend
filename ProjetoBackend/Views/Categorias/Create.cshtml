@model ProjetoBackend.Models.Categoria

@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid text-center my-4">
    <img class="img-fluid" src="~/img/jaketa-white.png" width="397" height="132" />
</div>

<div class="container">

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row ms-3 me-3">
            <div class="col-12 mt-2">
                <div class="form-group text-light">
                    <label asp-for="Nome" class="control-label">Nome:</label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">

            <div class="justify-content-center align-items-center d-flex">

                <div class="col col-md-4 mt-4 ms-5 me-5">
                    <div class="form-group">
                        <input type="submit" value="Adicionar" class="btn btn-adicionar text-black w-100" />
                    </div>
                </div>
                <div class="col-2 col-md-4 mt-4 me-5">
                    <a class="btn btn-outline-secondary w-100" asp-action="Index">Cancelar</a>
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
