@{
    ViewData["Title"] = "Produtos/Serviços";
}

<link href="~/css/site.css" rel="stylesheet" />
<body>
    <div class="container-fluid text-center my-4">
        <img class="img-fluid" src="../img/jaketa-white.png" width="397" height="132" />
    </div>
    <div class="container-fluid">

        <div class="row justify-content-md-center gap-4 mb-4">
            <div class="col-md-3 position-relative">
                <a class="text-light fw-bold" asp-area="" asp-controller="Produtos" asp-action="Index">
                    <img class="img-fluid fixed-size" src="~/img/cadeiraconserto.jpg" alt="Produtos" />
                    <h3 class="text-light text-overlay fs-4">Produtos</h3>
                </a>
            </div>
            <div class="col-md-3 position-relative">
                <a class="text-light fw-bold" asp-area="" asp-controller="Categorias" asp-action="Index">
                    <img class="img-fluid fixed-size" src="~/img/consertoarmario.png" alt="Categorias" />
                    <h3 class="text-light text-overlay fs-5">Categorias</h3>
                </a>
            </div>
        </div>

        <div class="row justify-content-md-center gap-4 mb-4">
            <div class="col-md-3 position-relative">
                <a class="text-light fw-bold" asp-area="" asp-controller="Caracteristicas" asp-action="Index">
                    <img class="img-fluid fixed-size" src="~/img/estante.png" alt="Características" />
                    <h3 class="text-light text-overlay fs-4">Características</h3>
                </a>
            </div>
            <div class="col-md-3 position-relative">
                <a class="text-light fw-bold" asp-area="" asp-area="" asp-controller="Servicos" asp-action="Index">
                    <img class="img-fluid fixed-size" src="~/img/entrega.png" alt="Serviços" />
                    <h3 class="text-light text-overlay fs-5">Serviços</h3>
                </a>
            </div>
        </div>


    </div>
</body>