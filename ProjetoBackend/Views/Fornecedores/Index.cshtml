@model IEnumerable<ProjetoBackend.Models.Fornecedor>

@{
    ViewData["Title"] = "Fornecedores";
}
<div class="container-fluid text-center my-4">
    <img class="img-fluid" src="img/jaketa-white.png" width="397" height="132" />
</div>


<h1 class="text-light text-center">Clientes:</h1>
<hr />
<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <a asp-action="Create" class="btn text-black btn-adicionar">Adicionar</a>
        </div>
        <div class="search-container">
            <form asp-action="Search" method="get" class="d-flex">
                <input class="search-input" type="text" name="nome" placeholder="Procurar..." />
                <button type="submit" class="btn search-button"><ion-icon name="search"></ion-icon></button>
            </form>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr class="table-dark">
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Celular)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CnpjCpf)
                    </th>
                    <th>Editar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @item.Email
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Celular)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CnpjCpf)
                        </td>
                        <td>
                            <div class="dropdown">
                                <ion-icon name="ellipsis-horizontal-outline" class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                </ion-icon>

                                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                    <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.FornecedorId">Editar</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" asp-action="Delete" asp-route-id="@item.FornecedorId">Apagar</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

